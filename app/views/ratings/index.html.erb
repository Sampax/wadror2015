<h2>Rating statistics</h2>
<div class="row">
  <div class="col-xs-6 col-md-4">
    <h3>Top Beers</h3>
    <%= render 'list', list: @top_beers %>
  </div>
  <div class="col-xs-6 col-md-4">
    <h3>Top breweries</h3>
    <%= render 'list', list: @top_breweries %>
  </div>
</div>

<h2>Most active users</h2>
<div class="row">
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>favorite beer</th>
        <th>preferred style</th>
        <th>favorite brewery</th>
        <th>ratings</th>
      </tr>
    </thead>
    <tbody>
      <% @top_users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %></td>
          <td><%= user.favorite_beer %></td>
          <td><%= user.favorite_style %></td>
          <td><%= user.favorite_brewery.name unless user.favorite_brewery.blank? %></td>
          <td><%= user.ratings.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<h2> Recent ratings: </h2>
<ul>
  <% @recent.each do |rating| %>
    <li> <%= rating %> <%= link_to rating.user.username, user_path(rating.user) %> </li>
  <% end %>
</ul>


<%= link_to 'New Rating', new_rating_path, class:'btn btn-primary' %>